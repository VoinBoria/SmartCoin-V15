<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/home_accounting_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/home_accounting_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.HomeAccountingApp"
        tools:targetApi="31">

        <!-- MainActivity з SplashTheme -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme"> <!-- Тема для Splash Screen -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Додаткові активності -->
        <activity android:name=".IncomeActivity" />
        <activity android:name=".ExpenseActivity" />
        <activity android:name=".AnalyticsActivity" />
        <activity android:name=".IncomeTransactionActivity" />
        <activity android:name=".ExpenseTransactionActivity" />
    </application>

</manifest>
